<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="16dp"
    tools:context=".ConsultaProjetoActivity">

    <!-- Toolbar/NavBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E0E7ED"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botão de voltar -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            android:src="@android:drawable/ic_media_previous"
            android:padding="16dp" />

        <!-- Logo da empresa -->
        <ImageView
            android:id="@+id/logoEmpresa"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="Logo da Empresa"
            android:src="@drawable/logo_empresa" />

        <!-- Nome da empresa como imagem -->
        <ImageView
            android:id="@+id/nomeEmpresaImagem"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:contentDescription="Nome da Empresa"
            android:src="@drawable/nome_empresa" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Caixa de input de texto no meio da tela -->
    <EditText
        android:id="@+id/editTextCodigoProjeto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Digite o código do projeto"
        android:inputType="text"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Botão "Consultar" abaixo da caixa de input -->
    <Button
        android:id="@+id/buttonConsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editTextCodigoProjeto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
