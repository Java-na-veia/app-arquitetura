<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="16dp"
    tools:context=".TelaProjetoActivity">

    <!-- Toolbar/NavBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E0E7ED"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botão de voltar -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            android:src="@android:drawable/ic_media_previous"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo da empresa -->
        <ImageView
            android:id="@+id/logoEmpresa"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="Logo da Empresa"
            android:src="@drawable/logo_empresa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nome da empresa como imagem -->
        <ImageView
            android:id="@+id/nomeEmpresaImagem"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:contentDescription="Nome da Empresa"
            android:src="@drawable/nome_empresa"
            app:layout_constraintStart_toEndOf="@id/logoEmpresa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Card para as informações do cliente -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome do cliente -->
            <TextView
                android:id="@+id/tvNomeClienteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Cliente"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNomeCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="João da Silva"
                android:textColor="#616161"
                android:textSize="16sp" />

            <!-- Linha divisória -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0" />

            <!-- Tipo de projeto -->
            <TextView
                android:id="@+id/tvTipoProjetoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Projeto"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTipoProjeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Planta de piso/rodapé"
                android:textColor="#616161"
                android:textSize="16sp" />

            <ScrollView
                android:id="@+id/scrollViewTipoProjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvItensLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Itens"
                        android:textColor="#1E90FF"
                        android:textSize="16sp"
                        android:autoLink="web"
                        android:linksClickable="true" />

                </LinearLayout>
            </ScrollView>
            <!-- Linha divisória -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0" />

            <!-- Data de início -->
            <TextView
                android:id="@+id/tvDataInicioLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data de Início"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDataInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="01/09/2024"
                android:textColor="#616161"
                android:textSize="16sp" />

            <!-- Linha divisória -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0" />

            <!-- Etapa do projeto -->
            <TextView
                android:id="@+id/tvEtapaProjetoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etapa do Projeto"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEtapaProjeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Produção"
                android:textColor="#616161"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
